{
  "name": "pdf-study",
  "version": "1.0.0",
  "description": "PDF-Suchwerk f√ºr effektives Lernen",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build:main && npm run build:preload && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:vite && electron-builder",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "esbuild src/preload/index.ts --bundle --platform=node --outfile=dist/preload/index.js --external:electron",
    "build:vite": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "canvas": "^3.2.0",
    "canvas-confetti": "^1.9.4",
    "chokidar": "^4.0.3",
    "openai": "^6.16.0",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "^4.9.155",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-pdf": "^9.2.1",
    "tesseract.js": "^7.0.0",
    "ts-fsrs": "^5.2.3",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.27.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.pdf-study.app",
    "productName": "PDF-Study",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  }
}
